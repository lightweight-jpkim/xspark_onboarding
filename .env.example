# ========================================
# xspark_onboarding 환경변수 설정
# ========================================

# ----------------------------------------
# Notion API Configuration
# ----------------------------------------
# Integration 생성: https://www.notion.so/profile/integrations
# 권한: Read content, Update content, Insert content
NOTION_API_TOKEN=secret_your_notion_api_token_here

# (선택) 온보딩 문서가 있는 페이지 ID
NOTION_ONBOARDING_PAGE_ID=

# (선택) FAQ 데이터베이스 ID - 자동 생성 가능
NOTION_FAQ_DATABASE_ID=

# ----------------------------------------
# OpenAI API Configuration
# ----------------------------------------
# API Key 발급: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# AI 모델 선택 (gpt-4o, gpt-4-turbo, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o

# (선택) AI 응답 설정
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ----------------------------------------
# Server Configuration
# ----------------------------------------
PORT=3000
NODE_ENV=development

# ----------------------------------------
# 보안 설정
# ----------------------------------------
# CORS 설정 (프로덕션에서는 특정 도메인으로 제한)
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# ----------------------------------------
# 로깅 설정
# ----------------------------------------
LOG_LEVEL=info
LOG_API_CALLS=false

# ========================================
# 배포 환경 참고사항
# ========================================
#
# Vercel:
#   - Settings → Environment Variables에 추가
#   - NODE_ENV=production 자동 설정됨
#
# Railway:
#   - Variables 탭에서 추가
#   - 자동 재배포됨
#
# Render:
#   - Environment 탭에서 추가
#   - Secret Files 기능도 사용 가능
#
